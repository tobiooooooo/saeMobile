<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationActivity2">


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DonationActivity2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DonationActivity2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="189dp">

                <!-- ✅ Header -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/search_icon"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Rechercher"
                        android:src="@drawable/ico_search" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="0dp"
                        app:srcCompat="@drawable/logo_couleur" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/menu_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ico_menu"
                        android:contentDescription="Menu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="16dp"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:background="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="35dp"
                    android:background="@drawable/bg_login"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mon_recapitulatif"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <!-- Destinataire -->
                    <TextView
                        android:id="@+id/tv_association_recap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Association : "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <!-- Montant du don -->
                    <TextView
                        android:id="@+id/tv_montant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Montant : "
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <!-- Type de don -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Type de don :"
                        android:textStyle="bold" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="35dp"
                    android:background="@drawable/bg_login"
                    android:orientation="vertical">

                    <!-- Nom sur la carte -->
                    <EditText
                        android:id="@+id/et_nom_carte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nom_sur_la_carte"
                        android:inputType="textCapWords"
                        android:padding="10dp" />

                    <!-- Numéro de carte -->
                    <EditText
                        android:id="@+id/et_numero_carte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/num_ro_de_carte"
                        android:inputType="number"
                        android:maxLength="16"
                        android:padding="10dp" />


                    <!-- Cryptogramme -->
                    <EditText
                        android:id="@+id/et_cryptogramme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cryptogramme_3_chiffres"
                        android:inputType="numberPassword"
                        android:maxLength="3"
                        android:padding="10dp" />


                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/valider"
                        android:layout_marginTop="8dp"/>


                </LinearLayout>


                <!-- ✅ Footer -->
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/log_in_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/log_in"
                        android:background="@drawable/ico_account"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <!-- ⚙️ Logo paramètres (à droite) -->
                    <ImageButton
                        android:id="@+id/settings_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_setting"
                        android:contentDescription="Paramètres"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>


            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 📜 Menu latéral -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/drawer_menu"/>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
